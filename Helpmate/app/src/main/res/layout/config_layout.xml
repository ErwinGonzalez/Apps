<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txt_course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/about"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginLeft="15dp" />

    <Button
        android:text="@string/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_course_name"
        android:layout_alignLeft="@+id/txt_course_name"
        android:layout_alignStart="@+id/txt_course_name"
        android:layout_marginTop="15dp"
        android:id="@+id/about_button" />

    <TextView
        android:text="Borrar Todos los Datos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="14dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/about_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/delete_button"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/about_button"
        android:layout_alignEnd="@+id/about_button" />


</RelativeLayout>